<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form data-parsley-validate="" class="form login-form">
      <div class="form-group">
        <label for="email">email:</label>
        <input class="form-input" data-parsley-trigger="change" type="email" id="email-login" required=""/>
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" required=""/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form data-parsley-validate="" class="form signup-form">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="form-input" type="text" id="name-signup" required=""/>
      </div>
      <div class="form-group">
        <label for="email">email:</label>
        <input class="form-input" data-parsley-trigger="change" type="email" id="email-signup" required=""/>
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input" type="password" id="password-signup" required=""/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
